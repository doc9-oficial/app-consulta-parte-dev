{
    "name": "app-consulta-parte-dev",
    "version": "1.0.0",
    "description": "Consulta de Parte – e-SAJ: Localiza processos por nome da parte diretamente nos sistemas judiciais",
    "auth": {
        "description": {
            "title": "Configuração de Acesso",
            "body": "Configure suas credenciais para acessar o serviço.",
            "footer": "As credenciais são armazenadas com segurança.",
            "link": ""
        },
        "params": [            {
                "name": "whomToken",
                "type": "string",
                "inputType": "text",
                "required": true,
                "label": "Token do Whom"
            },
            {
                "name": "whomExtensionId",
                "type": "string",
                "inputType": "text",
                "required": true,
                "label": "ID da Extensão do Whom"
            }        
        ]
    },
    "functions": {        
        "consultarParte": {
            "script": "dist/consultarParte.js",
            "description": "Busca processos por nome da parte",
            "category": "judicial",
            "values": {
                "termo": "exemplo",
                "filtro": "todos"
            },
            "params": [
                {
                    "name": "termo",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Termo de consulta"
                },
                {
                    "name": "filtro",
                    "type": "string",
                    "inputType": "text",
                    "required": false,
                    "label": "Filtro de resultados"
                }
            ]        },
        "detalharParte": {
            "script": "dist/detalharParte.js",
            "description": "Obtém detalhes de parte em processo",
            "category": "judicial",
            "values": {
                "parametro": "valor"
            },
            "params": [
                {
                    "name": "parametro",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Parâmetro principal"
                }
            ]        }    },
    "config": {
        "timeout": 60000,
        "max_retries": 3,
        "cache_ttl": 3600
    },
    "mcp": true
}
